<h3><%= @product.name %></h3>
<p><%= @product.description %></p>
<p><%= @product.created_at %></p>
<%= link_to 'Make a new offer', new_offer_path(:id => @product.id) %>
<table>
  <tr>
    <th>Offer made by:</th>
    <th>Suggested price</th>
    <th>Offer made at:</th>
  </tr>
<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.customer.name %></td>
    <td><%= offer.suggested_price %></td>
    <td><%= offer.created_at %></td>
  </tr>
<% end %>
</table>
<p><%= link_to 'Show all products', products_path %></p>
